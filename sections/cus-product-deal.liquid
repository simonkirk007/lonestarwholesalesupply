<section class="deal">
    <div class="container">
        <div class="title text-dark">
            <h3> {{ section.settings.title | escape }} </h3>
        </div>
        <div class="row">

        {% assign selected_collection = section.settings.collection %}
          {% for product in collections[selected_collection].products limit: 8 %}
            <div class="col-lg-3 col-md-4 col-12">
                <div class="blog-con pro-con">
                    <div class="blog-img">
                        <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="">
                        <div class="pro-btn">
                            <a class="btn btn-1" href="{{ product.url }}">Add to card</a>
                        </div>
                    </div>
                    <div class="blog-inner-item pro-inner-item">

                        <h4><a href="{{ product.url }}"> {{ product.title }}</a></h4>
                        <p>Lorem Ipsum is simply dummy text</p>
                        <div class="price-ratting">
                            <div class="price">
                              
                               <p>
                               {% if product.compare_at_price > product.price %}
                                
                                  <del>{{ product.compare_at_price | money }}</del>
                                  {{ product.price | money }}
                                
                              {% else %}
                                {{ product.price | money }}
                              {% endif %}
                              </p>
                              
                            </div>
                            <div class="ratting">
                                <p><i class="fas fa-star"></i> 0.5</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          {% endfor %}


        </div>
    </div>
</section>

{% schema %}
    {
      "name": "Cus Product Deal",
      "tag": "section",
      "class": "announcement-bar-section",
      "settings": [ 
        {
        "type": "text",
        "id": "title",
        "default": "DEALS OF THE DAY",
        "label": "Title"
        }, 
        {
            "type": "collection",
            "id": "collection",
            "label": "t:sections.featured-collection.settings.collection.label"
        }
    ],

    "presets": [
        {
          "name": "Cus Product Deal"
        }
      ]
    }

{% endschema %}