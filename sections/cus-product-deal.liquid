<section class="deal">
    <div class="container">
        <div class="title text-dark">
            <h3> {{ section.settings.title | escape }} </h3>
        </div>
        <div class="row">

        {% assign selected_collection = section.settings.collection %}
        {% for product in collections[selected_collection].products limit: 4 %}
            <div class="col-12 col-lg-3 col-md-6">
                <div class="deal-item">
                    <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="">
                    <div class="deal-content">
                        <h3>{{ product.title }}</h3>
                        <div class="rating">
                            <div class="shopify-product-reviews-badge" data-id="{{ product.id }}"></div>
                        </div>
                        <div class="price-tag">
                            <div class="price">

                            {% if product.compare_at_price > product.price %}
                              
                                <h4 class="price--regular">{{ product.price | money }}</h4>
                                <h6 class="price--sale">{{ product.compare_at_price | money }}</h6>
                                
                            {% else %}
                                <h4 class="price">{{ product.price | money }}</h4>
                            {% endif %}
                            
                            </div>
                            <div class="deal-btn">
                                <a class="btn-2" href="{{ product.url }}">Add</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            {% endfor %}


        </div>
    </div>
</section>

{% schema %}
    {
      "name": "Cus Product Deal",
      "tag": "section",
      "class": "announcement-bar-section",
      "settings": [ 
        {
        "type": "text",
        "id": "title",
        "default": "DEALS OF THE DAY",
        "label": "Title"
        }, 
        {
            "type": "collection",
            "id": "collection",
            "label": "t:sections.featured-collection.settings.collection.label"
        }
    ],

    "presets": [
        {
          "name": "Cus Product Deal"
        }
      ]
    }

{% endschema %}