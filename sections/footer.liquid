{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}



<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-4 col-md-4">
                <div class="footer-info">

                    <a href="{{ routes.root_url }}" class="web-logo footer-info__logo ">
                        <img src="{{ section.settings.footer_logo | img_url: 'master' }}" alt="Logo" />
                    </a>
                    <!--<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>-->
                    <div class="footersocial-icon">

                        <ul class="footer-info__social">
                          {%- render 'social-icons' -%}
                        </ul>

                        <ul class="footer-info__social">
                            <li>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-pinterest-p"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fab fa-instagram"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-2 col-md-4">
            
            <div class="footer__nav">
              <h6 class="title"> {{ section.settings.menu_title }} </h6>
              <ul>
                <li><a href="#">Lorem</a></li>
                <li><a href="#">Lorem</a></li>
                <li><a href="#">Lorem</a></li>
                <li><a href="#">Lorem</a></li>
              </ul>
            </div>

            </div>
            <div class="col-12 col-lg-2 col-md-4">

            <div class="footer__nav">
              <h6 class="title"> {{ section.settings.menu_title_2 }} </h6>
              <ul>
                <li><a href="#">Lorem</a></li>
                <li><a href="#">Lorem</a></li>
                <li><a href="#">Lorem</a></li>
                <li><a href="#">Lorem</a></li>
              </ul>
            </div>
            
            </div>
            <div class="col-12 col-lg-4">
                <div class="footer__nav">
                    <h6 class="title">{{ section.settings.newsletter_title }}</h6>
                    {{ section.settings.newsletter_content }}
                    {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                      <input type="hidden" name="contact[tags]" value="newsletter">
                        <div class="newsletter-form__field-wrapper">
                          <div class="field">
                            <input
                              id="NewsletterForm--{{ section.id }}"
                              type="email"
                              name="contact[email]"
                              class="field__input"
                              value="{{ form.email }}"
                              aria-required="true"
                              autocorrect="off"
                              autocapitalize="off"
                              autocomplete="email"
                              {% if form.errors %}
                                autofocus
                                aria-invalid="true"
                                aria-describedby="ContactFooter-error"
                              {% elsif form.posted_successfully? %}
                                aria-describedby="ContactFooter-success"
                              {% endif %}
                              placeholder="Enter your email"
                              required
                            >
                          
                            <button
                              type="submit"
                              class="newsletter-form__button field__button"
                              name="commit"
                              id="Subscribe"
                              aria-label="{{ 'newsletter.button_label' | t }}"
                            >
                            Subscribe
                            </button>
                          </div>
                          {%- if form.errors -%}
                            <small class="newsletter-form__message form__message" id="ContactFooter-error">
                              {%- render 'icon-error' -%}
                              {{- form.errors.translated_fields.email | capitalize }}
                              {{ form.errors.messages.email -}}
                            </small>
                          {%- endif -%}
                        </div>
                        {%- if form.posted_successfully? -%}
                          <h3
                            class="newsletter-form__message newsletter-form__message--success form__message"
                            id="ContactFooter-success"
                            tabindex="-1"
                            autofocus
                          >
                            {% render 'icon-success' -%}
                            {{- 'newsletter.success' | t }}
                          </h3>
                        {%- endif -%}
                      {%- endform -%}
                </div>
            </div>
            <div class="col-12">
                <div class="footer__copyright">
                    {{ section.settings.copyright }}
                </div>
            </div>
        </div>
    </div>
</footer>

{% schema %}
  {
    "name": "Cus Footer",
    "tag": "section",
    "class": "announcement-bar-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "footer_logo",
        "label": "Footer Logo"
      },
      {
        "type": "text",
        "id": "menu_title",
        "default": "QUICK LINKS",
        "label": "Menu Title 1"
      },

      {
        "type": "link_list",
        "id": "footer_menu",
        "default": "main-menu",
        "label": "Menu 1"
      },
      {
        "type": "text",
        "id": "menu_title_2",
        "default": "USEFUL LINKS",
        "label": "Menu Title 2"
      },
      {
        "type": "text",
        "id": "newsletter_title",
        "default": "Newsletter",
        "label": "NewsLetter Title"
      },
      {
        "type": "richtext",
        "id": "newsletter_content",
        "default": "<p>Subscribe Our Newsletter</p>",
        "label": "NewsLetter content"
      },
      {
        "type": "richtext",
        "id": "copyright",
        "default": "<p>2023 . All rights reserved</p>",
        "label": "Copyright content"
      }
  ],
  "presets": [
      {
        "name": "Cus Footer"
      }
    ]
  }

{% endschema %}