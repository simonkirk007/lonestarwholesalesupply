<section class="breadcumb" style="background-image: url({% if section.settings.image !=blank %}{{ section.settings.image | img_url: 'master' }} {% else %}{{ 'pro-bg.png' | asset_url }}{% endif %});">
    <div class="container">
        <div class="breadcumb-con">
            <h2 class="text-light">{{- collection.title | escape -}}</h2>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ]
}
{% endschema %}
